<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.yyhz.sc.data.dao.RoleInfoDao">

	<resultMap id="colomnResult" type="com.yyhz.sc.data.model.RoleInfo">
		<id property="id" column="id" />
		<result property="name" column="name" />
		<result property="status" column="status" />
		<result property="createTime" column="createTime" />
	</resultMap>
	<!-- 动态sql -->
	<sql id="colomnResult">
		<![CDATA[
	     id,
	     name,
	     status,
	     createTime
	 ]]>
	</sql>
	<insert id="insert">
	   insert into role_info  
	   <trim prefix="(" suffix=")" suffixOverrides=",">
			     <if test="id!=null">id,</if>
			     <if test="name!=null">name,</if>
			     <if test="status!=null">status,</if>
			     <if test="createTime!=null">createTime,</if>
		</trim>
	   	<trim prefix="values(" suffix=")" suffixOverrides=",">
			     <if test="id!=null">#{id},</if>
			     <if test="name!=null">#{name},</if>
			     <if test="status!=null">#{status},</if>
			     <if test="createTime!=null">#{createTime},</if>
		</trim>
	</insert>
	
	<update id="update">
	   update role_info 
	   <set>
			     <if test="id!=null">id=#{id},</if>
			     <if test="name!=null">name=#{name},</if>
			     <if test="status!=null">status=#{status},</if>
			     <if test="createTime!=null">createTime=#{createTime},</if>
		</set>
		where 
	   		 id=#{id} 
	</update>

	<delete id="delete">
	   delete from
	     role_info 
	   where 
	    id=#{id} 
	</delete>
	
	<select id="selectEntity" resultMap="colomnResult">
	   select 
	<include refid="colomnResult" /> 
	   from role_info
	  <where>
				<if test=" id != null and id != '' ">
					and id=#{id} 
				</if>
				<if test=" name != null and name != '' ">
					and name=#{name} 
				</if>
				<if test=" status != null ">
					and status=#{status} 
				</if>
				<if test=" createTime != null ">
					and createTime=#{createTime} 
				</if>
		</where>
	</select>
	
	<!-- 根据条件信息 -->
	<select id="selectAll"  resultMap="colomnResult">
		select
		<include refid="colomnResult" /> 
		<![CDATA[
			from role_info
		]]>
		<where>
				<if test=" id != null and id != '' ">
					and id=#{id} 
				</if>
				<if test=" name != null and name != '' ">
					and name like CONCAT('%',#{name},'%')
				</if>
				<if test=" status != null ">
					and status=#{status} 
				</if>
				<if test=" createTime != null">
					and createTime=#{createTime} 
				</if>
		</where>
		<if test="sort != null">
				order by ${sort} ${order}
		</if>
	</select>
	<!-- 根据条件查询数量 -->
	<select id="selectCount"  resultType="int">

		select count(id) from role_info
		<where>
				<if test=" id != null and id != '' ">
					and id=#{id} 
				</if>
				<if test=" name != null and name != '' ">
					and name=#{name}
				</if>
				<if test=" status != null ">
					and status=#{status}
				</if>
				<if test=" createTime != null">
					and createTime=#{createTime} 
				</if>
		</where>
	</select>
	<!-- 根据主键查询信息 -->
	<select id="selectById"  resultMap="colomnResult">
		select
		<include refid="colomnResult" /> 
		<![CDATA[
			from role_info where 
			
			   	 id=#{id} 
		]]>
		
	</select>
	
	<!-- 批量删除 -->
	<select id="selectByIds" parameterType="java.util.List" resultMap="colomnResult">
		select
		<include refid="colomnResult" /> 
		 from role_info where id in
		<foreach item="idList" index="index" collection="list" open="(" separator="," close=")">
  			#{idList}
 		</foreach>
	</select>
		
	<!-- 批量删除 -->
	<delete id="batchDelete" parameterType="java.util.List">
		delete from role_info where id in
		<foreach item="idList" index="index" collection="list" open="(" separator="," close=")">
  			#{idList}
 		</foreach>
	</delete>
	
	<!-- 批量修改 -->
	<update id="batchUpdate" parameterType="java.util.HashMap">
		update role_info
		<set>
			     <if test="id!=null">id=#{id},</if>
			     <if test="name!=null">name=#{name},</if>
			     <if test="status!=null">status=#{status},</if>
			     <if test="creatTime!=null">creatTime=#{creatTime},</if>
		</set>
		where id in
		<foreach item="idList" index="index" collection="list" open="(" separator="," close=")">
  			#{idList}
 		</foreach>
	</update>
</mapper> 