<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.yyhz.sc.data.dao.ServiceInfoDao">

	<resultMap id="colomnResult" type="com.yyhz.sc.data.model.ServiceInfo">
		<id property="id" column="id" />
		<result property="type" column="type" />
		<result property="context" column="context" />
	</resultMap>
	<!-- 动态sql -->
	<sql id="colomnResult">
		<![CDATA[
	     id,
	     type,
	     context
	 ]]>
	</sql>
	<insert id="insert">
	   insert into service_info  
	   <trim prefix="(" suffix=")" suffixOverrides=",">
			     <if test="id!=null">id,</if>
			     <if test="type!=null">type,</if>
			     <if test="context!=null">context,</if>
		</trim>
	   	<trim prefix="values(" suffix=")" suffixOverrides=",">
			     <if test="id!=null">#{id},</if>
			     <if test="type!=null">#{type},</if>
			     <if test="context!=null">#{context},</if>
		</trim>
	</insert>

	<update id="update">
	   update service_info 
	   <set>
			     <if test="id!=null">id=#{id},</if>
			     <if test="type!=null">type=#{type},</if>
			     <if test="context!=null">context=#{context},</if>
		</set>
		where 
	   		 id=#{id} 
	</update>

	<delete id="delete">
	   delete from
	     service_info 
	   where 
	    id=#{id} 
	</delete>

	<select id="selectEntity" resultMap="colomnResult">
	   select 
	<include refid="colomnResult" /> 
	   from service_info
	  <where>
				<if test=" id != null and id != '' ">
					and id=#{id} 
				</if>
				<if test=" type != null and type != '' ">
					and type=#{type} 
				</if>
				<if test=" context != null and context != '' ">
					and context=#{context} 
				</if>
		</where>
	</select>
	
	<!-- 根据条件信息 -->
	<select id="selectAll"  resultMap="colomnResult">
		select
		<include refid="colomnResult" /> 
		<![CDATA[
			from service_info
		]]>
		<where>
				<if test=" id != null and id != '' ">
					and id=#{id} 
				</if>
				<if test=" type != null and type != '' ">
					and type=#{type} 
				</if>
				<if test=" context != null and context != '' ">
					and context=#{context} 
				</if>
		</where>
		<if test="sort != null">
				order by ${sort} ${order}
		</if>
	</select>
	<!-- 根据条件查询数量 -->
	<select id="selectCount"  resultType="int">

		select count(id) from service_info
		<where>
				<if test=" id != null and id != '' ">
					and id=#{id} 
				</if>
				<if test=" type != null and type != '' ">
					and type=#{type} 
				</if>
				<if test=" context != null and context != '' ">
					and context=#{context} 
				</if>
		</where>
	</select>
	<!-- 根据主键查询信息 -->
	<select id="selectById"  resultMap="colomnResult">
		select
		<include refid="colomnResult" /> 
		<![CDATA[
			from service_info where 
			
			   	 id=#{id} 
		]]>
		
	</select>
	
	<!-- 批量删除 -->
	<select id="selectByIds" parameterType="java.util.List" resultMap="colomnResult">
		select
		<include refid="colomnResult" /> 
		 from service_info where id in
		<foreach item="idList" index="index" collection="list" open="(" separator="," close=")">
  			#{idList}
 		</foreach>
	</select>
		
	<!-- 批量删除 -->
	<delete id="batchDelete" parameterType="java.util.List">
		delete from service_info where id in
		<foreach item="idList" index="index" collection="list" open="(" separator="," close=")">
  			#{idList}
 		</foreach>
	</delete>
	
	<!-- 批量修改 -->
	<update id="batchUpdate" parameterType="java.util.HashMap">
		update service_info
		<set>
			     <if test="id!=null">id=#{id},</if>
			     <if test="type!=null">type=#{type},</if>
			     <if test="context!=null">context=#{context},</if>
		</set>
		where id in
		<foreach item="idList" index="index" collection="list" open="(" separator="," close=")">
  			#{idList}
 		</foreach>
	</update>
</mapper> 